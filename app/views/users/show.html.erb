<p id="notice"><%= notice %></p>

<h2> <%= @user.name %>  </h2>
<% @user.posts.each do |post| %>
  <p><%= post.name %></p>
  <p><%= post.content %></p>
  <% post.comments.each do |comment| %>
    <p><%= comment.content %>, by: <span> <%= comment.user.name %> </span></p>
  <% end %>
<% end %>

<%= link_to 'New Post', new_post_path %>
<%= link_to 'Back', users_path %>
